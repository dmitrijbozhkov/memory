{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "./node_modules/@types/"
        ],
        "rootDir": "./src/",
        "outDir": "./app/"
    },
    "exclude": [
        "./node_modules/",
        "**/*.spec.ts/"
    ]
}